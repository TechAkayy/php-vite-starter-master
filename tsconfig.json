{
	"compilerOptions": {
		"baseUrl": ".",
		"types": ["vite/client", "node"],
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": false,
		"allowJs": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./src/*"],
			"~~/*": ["./*"]
		}
	},
	"include": ["src"]
}
